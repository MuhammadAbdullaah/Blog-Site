<%= turbo_frame_tag "profile" do %>
  <h4>Edit Profile</h4>
  <%= form_with model: @profile do |form| %>
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
    <div class="field">
      <%= form.label :full_name %>
      <%= form.text_field :full_name %>
    </div>
    <div class="field">
      <%= form.label :bio %>
      <%= form.text_area :bio, rows: 4 %>
    </div>
    <div class="actions">
      <%= form.submit "Update Profile", class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>