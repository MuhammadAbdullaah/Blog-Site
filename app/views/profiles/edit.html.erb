<h1>Edit Profile</h1>

<%= form_with model: @profile, local: true do |form| %>
  <div class="field">
    <%= form.label :full_name %>
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, rows: 4 %>
  </div>

  <div class="actions">
    <%= form.submit "Update Profile", class: "btn btn-success" %>
  </div>
<% end %>
